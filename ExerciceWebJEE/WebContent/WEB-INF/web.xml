<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ExerciceWebJEE</display-name>
  <welcome-file-list>
    <welcome-file>catalogue</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>driverclass</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>databaseurl</param-name>
    <param-value>jdbc:mysql://localhost:3306/webfirstjdbc</param-value>
  </context-param>
  <context-param>
    <param-name>login</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value></param-value>
  </context-param>
  <listener>
    <listener-class>db.DBManager</listener-class>
  </listener>  
  <servlet>
    <description></description>
    <display-name>CatalogueServlet</display-name>
    <servlet-name>CatalogueServlet</servlet-name>
    <servlet-class>servlets.CatalogueServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CatalogueServlet</servlet-name>
    <url-pattern>/catalogue</url-pattern>
  </servlet-mapping>
</web-app>